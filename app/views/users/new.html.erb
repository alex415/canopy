
<h1>Sign Up</h1>
<%= form_for @user do |f| %>
  <%= f.text_field :username, placeholder: "Choose a username", autofocus: true, :required => true %><br>
  <%= f.email_field :email, placeholder: "Email", :required => true %><br>
  <%= f.password_field :password, placeholder: "Password", :required => true %><br>
  <%= f.submit "Sign Up" %><br>
<% end %>
<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: "alert #{name == 'error' ? 'alert-danger' : 'alert-notice'}" %>
<% end %>
<br>
<p>Already have an account? <%= link_to "Click here", login_path %> to log in.</p>